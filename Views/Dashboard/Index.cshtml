@{
	ViewData["Title"] = "Dashboard";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
	<div class="row">
		<div class="col-md-4">
			<div class="x_panel">
				<div class="x_title">
					<h4>Products</h4>
					<div class="clearfix"></div>
				</div>
				<div class="x_content">
					<table class="table table-hover" id="tblProduct">
						<thead>
							<tr>
								<th>#</th>
								<th>Name</th>
								<th>Category</th>
								<th>Price</th>
							</tr>
							<tbody></tbody>
						</thead>
					</table>
				</div>
			</div>
		</div>
		<div class="col-md-4">
			<div class="x_panel">
				<div class="x_title">
					<h4>Sales</h4>
					<div class="clearfix"></div>
				</div>
				<div class="x_content">
					<table class="table table-hover" id="tblSale">
						<thead>
							<tr>
								<th>#</th>
								<th>Customer</th>
								<th>Amount</th>
								<th>Purchased</th>
							</tr>
							<tbody></tbody>
						</thead>
					</table>
				</div>
			</div>
		</div>
		<div class="col-md-4">
			<div class="x_panel">
				<div class="x_title">
					<h4>Customer</h4>
					<div class="clearfix"></div>
				</div>
				<div class="x_content">
					<table class="table table-hover" id="tblCustomer">
						<thead>
							<tr>
								<th>#</th>
								<th>Name</th>
								<th>Gender</th>
								<th>Mobile</th>
							</tr>
							<tbody></tbody>
						</thead>
					</table>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4">
			<div class="x_panel">
				<div class="x_title">
					<h4>Products</h4>
					<div class="clearfix"></div>
				</div>
				<div class="x_content">
					<canvas id="canvasProducts" width="400" height="400"></canvas>
				</div>
			</div>
		</div>
		<div class="col-md-5">
			<div class="x_panel">
				<div class="x_title">
					<h4>Sales</h4>
					<div class="clearfix"></div>
				</div>
				<div class="x_content">
					<canvas id="canvasSales" width="500" height="400"></canvas>
				</div>
			</div>
		</div>
		<div class="col-md-3">
			<div class="x_panel">
				<div class="x_title">
					<h4>Customer</h4>
					<div class="clearfix"></div>
				</div>
				<div class="x_content">
					<canvas id="canvasCustomers" width="300" height="400"></canvas>
				</div>
			</div>
		</div>
</div>

@section Scripts {
	<script src="~/js/signalr/dist/browser/signalr.js"></script>
